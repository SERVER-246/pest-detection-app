<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_green"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pest_title"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pest_subtitle"
                android:textColor="#E8F5E9"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Image Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selected_pest_image_desc"
                    android:scaleType="centerInside"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/imagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/image_placeholder_text"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/choose_image"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="textStart"
                android:backgroundTint="@color/primary_green"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cameraButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/take_photo"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart"
                android:backgroundTint="@color/accent_orange"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Model Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_ai_model"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/modelSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Classify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/classifyButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/analyze_pest"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/accent_orange"
            android:enabled="false"
            android:layout_margin="16dp"
            app:cornerRadius="32dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="textStart"
            app:iconSize="24dp" />

        <!-- Results Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/classification_results"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/loadingProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminate="true" />

                <!-- Results container (fixed height) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#FAFAFA"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/results_placeholder"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:padding="8dp"
                        android:scrollbars="vertical" />

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
